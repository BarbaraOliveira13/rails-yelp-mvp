
<div class="container mt-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1><%= @restaurant.name %></h1>
    <%= link_to edit_restaurant_path(@restaurant.id), class: 'btn btn-light btn-sm border' do %>
      <i class="fa fa-pencil"></i> Edit this restaurant
    <% end %>
  </div>


  <p class="well"><%= @restaurant.address %></p>

  <hr>
  <%= link_to restaurants_path do %>
    <i class="fa-solid fa-arrow-rotate-left"></i> Back to list
  <% end %>
</div>

<%= link_to "Add review", new_restaurant_review_path(@restaurant)%>

<p><strong>Reviews</strong></p>
<ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item">rating: <%= review.rating %>/5 - <%= review.content %></li>
  <% end %>
</ul>
<br>
